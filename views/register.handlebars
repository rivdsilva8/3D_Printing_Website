<form action="/register" method="POST">
  {{#if successMessage}}<div
      class="alert alert-success"
      role="alert"
      style="display: none;"
    >{{successMessage}}</div>{{/if}}
  <div id="error-container" style="display: none;">{{#if
      error
    }}{{error}}{{/if}}</div>
  <label for="firstNameInput">First Name:</label>
  <input
    type="text"
    name="firstNameInput"
    id="firstNameInput"
    placeholder="Enter your First Name"
  />
  <label for="lastNameInput">Last Name:</label>
  <input
    type="text"
    name="lastNameInput"
    id="lastNameInput"
    placeholder="Enter your LastName"
  />
  <label for="email">Email</label>
  <input type="email" id="email" name="email" placeholder="enter your email" />
  <label for="phone">Phone</label>
  <div>
    <input
      type="tel"
      id="phone"
      name="phone"
      placeholder="1234567890"
      pattern="\d{3}\d{3}\d{4}"
    />
  </div>
  <label for="password">Password</label>
  <input
    type="password"
    id="password"
    name="password"
    placeholder="Please create a password"
  />
  <label for="cpassword">Confirm Password:</label>
  <input
    type="password"
    id="cpassword"
    name="cpassword"
    placeholder="confirm password"
  />
  <h2>Address</h2>
  <label for="saddress">Street Address:</label>
  <input
    type="text"
    name="saddress"
    id="saddress"
    placeholder="Enter your street address"
  />
  <label for="city">City:</label>
  <input
    type="text"
    name="city"
    id="city"
    placeholder="eg: San Jose, Jersey City etc"
  />

  <label for="state">state:</label>
  <input type="text" name="state" id="state" placeholder="eg: NJ,CAL,NY" />

  <label for="postalCode">Postal Code:</label>
  <input
    type="text"
    name="postalCode"
    id="postalCode"
    placeholder="Enter your Postal Code"
  />
  <button type="submit">Create Account</button>
</form>
<div class="account-create">Already have an account?
  <a href="/login">Click here to log-in</a>
</div>
<br /><br />

<footer>

  <a href="/">Back to home</a>
</footer>

<script src="/public/js/client_side_validation.js"></script>
<script src="/public/js/main.js"></script>